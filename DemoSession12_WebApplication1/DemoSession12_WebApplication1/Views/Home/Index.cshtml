
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="title">
    <span class="title_icon">
        <img src="~/User/images/bullet1.gif"
             alt="" title="" />
    </span>Featured products
</div>

@foreach (var product in ViewBag.FeaturedProducts)
{
    <div class="feat_prod_box">
        <div class="prod_img">
            <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                <img src="~/User/images/@product.Photo" alt=""
                     title="" border="0" style="width: 150px;height:100px"/>
            </a>
        </div>
        <div class="prod_det_box">
            <div class="box_top"></div>
            <div class="box_center">
                <div class="prod_title">@product.Name</div>
                <p class="details">
                   @product.Description
                </p>
                <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id" class="more">- more details -</a>
                <div class="clear"></div>
            </div>

            <div class="box_bottom"></div>
        </div>
        <div class="clear"></div>
    </div>
}




<div class="title">
    <span class="title_icon">
        <img src="~/images/bullet2.gif"
             alt="" title="" />
    </span>New products
</div>
<div class="new_products">
    @foreach (var product in ViewBag.NewProducts)
    {
        <div class="new_prod_box">
            <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">@product.Name</a>
            <div class="new_prod_bg">
                <span class="new_icon">
                    <img src="~/User/images/@product.Photo"
                         alt="" title="" style="width: 125px; height: 100px"/>
                </span> 
            </div>
        </div>
    }


</div>

<div class="clear"></div>


