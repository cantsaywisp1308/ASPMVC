
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section head{
    <link rel="stylesheet" href="~/User/css/lightbox.css" type="text/css" media="screen" />

    <script src="~/User/js/prototype.js" type="text/javascript"></script>
    <script src="~/User/js/scriptaculous.js?load=effects" type="text/javascript"></script>
    <script src="~/User/js/lightbox.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/User/js/java.js"></script>
}


<div class="crumb_nav">
    <a asp-controller="home" asp-action="index">home</a> &gt;&gt; @ViewBag.product.Name
</div>
<div class="title"><span class="title_icon"><img src="~/User/images/bullet1.gif" alt="" title="" /></span>@ViewBag.product.Name</div>

<div class="feat_prod_box_details">

    <div class="prod_img">
        <a asp-controller="product" asp-action="detail" asp-route-id="@ViewBag.product.Id"><img src="~/User/images/@ViewBag.product.Photo" alt="" title="" border="0" style="width: 130px; height:100px" /></a>
        <br /><br />
        <a href="~/User/images/@ViewBag.product.Photo" rel="lightbox"><img src="~/User/images/zoom.gif" alt="" title="" border="0" /></a>
    </div>

    <div class="prod_det_box">
        <div class="box_top"></div>
        <div class="box_center">
            <div class="prod_title">Details</div>
            <p class="details">
                @ViewBag.product.Description
            </p>
            <div class="price"><strong>PRICE:</strong> <span class="red">@ViewBag.product.Price $</span></div>
            <div class="price">
                <strong>COLORS:</strong>
                <span class="colors"><img src="~/User/images/color1.gif" alt="" title="" border="0" /></span>
                <span class="colors"><img src="~/User/images/color2.gif" alt="" title="" border="0" /></span>
                <span class="colors"><img src="~/User/images/color3.gif" alt="" title="" border="0" /></span>
            </div>
            <a href="details.html" class="more"><img src="~/User/images/order_now.gif" alt="" title="" border="0" /></a>
            <div class="clear"></div>
        </div>

        <div class="box_bottom"></div>
    </div>
    <div class="clear"></div>
</div>


