<h3>Demo Index - Send Email</h3>

@ViewBag.msg

<form method="post" asp-controller="demo" asp-action="send">
    <table>
        <tr>
            <td>To</td>
            <td><input type="text" name="to" /></td>
        </tr>
        <tr>
            <td>Subject</td>
            <td><input type="text" name="subject" /></td>
        </tr>
        <tr>
            <td>Content</td>
            <td><textarea cols="20" rows="5" name="content"></textarea></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Send" /></td>
        </tr>
    </table>
    
</form>