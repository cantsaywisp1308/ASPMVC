@model DemoSession11_WebApplication1.Models.Product

<h3>Edit Product</h3>
<form method="post" asp-controller="product" asp-action="edit" enctype="multipart/form-data">
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" asp-for="Name"/></td>
        </tr>
        <tr>
            <td>Price</td>
            <td><input type="text" asp-for="Price"/></td>
        </tr>
        <tr>
            <td>Quantity</td>
            <td><input type="number" asp-for="Quantity"/></td>
        </tr>
        <tr>
            <td>Photo</td>
            <td><input type="file" name="photo" asp-for="Photo"/></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><textarea asp-for="Description" rows="5" cols="20"></textarea></td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Submit"/>
                <input type="hidden" asp-for="Id"/>
            </td>
        </tr>
    </table>
</form>