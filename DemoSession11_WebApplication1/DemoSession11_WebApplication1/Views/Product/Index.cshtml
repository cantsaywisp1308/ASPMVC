<h3>Products List</h3>

<table style="border: 1px solid black">
    <tr>
        <th style="border: 1px solid black">ID</th>
        <th style="border: 1px solid black">Name</th>
        <th style="border: 1px solid black">Price</th>
        <th style="border: 1px solid black">Quantity</th>
        <th style="border: 1px solid black">Photo</th>
        <th style="border: 1px solid black">Description</th>
        <th style="border: 1px solid black">Status</th>
        <th style="border: 1px solid black">Action</th>
    </tr>
    @foreach (var product in ViewBag.products)
    {
<tr style="border: 1px solid black">
    <td style="border: 1px solid black">@product.Id</td>
    <td style="border: 1px solid black">@product.Name</td>
    <td style="border: 1px solid black">@product.Price</td>
    <td style="border: 1px solid black">@product.Quantity</td>
    <td style="border: 1px solid black"><img src="~/images/@product.Photo" style="width: 250px;height: 150px"/></td>
    <td style="border: 1px solid black">@product.Description</td>
    <td style="border: 1px solid black">@product.Status</td>
    <td style="border: 1px solid black">
        <a asp-controller="product" asp-action="delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure to delete this item?')">Delete</a>
        <a asp-controller="product" asp-action="edit" asp-route-id="@product.Id">Edit</a>
    </td>
</tr>
    }
</table>

<a asp-controller="product" asp-action="add">Add Product</a>